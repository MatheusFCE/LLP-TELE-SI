// Cria um programa que recebe dados via teclado e grava em um arquivo.
#include <stdio.h>
#include <stdlib.h>
#define TAMANHO 500
int main()
{
char texto[TAMANHO];
  ARQUIVO* fp;

  printf("Escreva o que quer salvar no arquivo.\n");
  fgets(texto, TAMANHO, stdin);
  if((fp = fopen("arquivo.txt", "w"))==NULL)
  {
printf ("Não foi possível abrir o arquivo.\n");
    saída(1);
    }
  fputs (texto, fp);
  fclose(fp);
  retorna 0;    
  }
